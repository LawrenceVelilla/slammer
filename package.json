{
  "name": "slammer",
  "main": "main.js",
  "scripts": {
    "start": "concurrently -k \"npm run dev:client\" \"npm run dev:electron\"",
    "start:full": "concurrently -k \"npm run dev:client\" \"npm run dev:server\" \"npm run dev:electron\"",
    "dev:client": "npm --prefix ./client run dev",
    "dev:server": "npm --prefix ./server run dev",
    "dev:electron": "wait-on http://localhost:5173/ && electron .",
    "build": "npm --prefix ./client run build"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "electron": "^40.4.1",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "openai": "^6.22.0"
  }
}
